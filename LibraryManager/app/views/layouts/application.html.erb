<!DOCTYPE html>
<html>
<head>
  <title>LibraryManager</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= yield :head %>

  <style type="text/css">
  	header {
  		border: 1px solid;
  		background: none repeat scroll 0% 0% #4472B9;
		margin: -10px 0px 0px -10px;
		padding: 10px;
		color: #ffffff;
		width: 100%;
		overflow: auto;
  	}
  	header a,
  	header a:link,
  	header a:hover,
  	header a:visited{
  		text-decoration: none;
  		color: #ffffff;
  	}

  	#navigation {
  		/*border: 1px solid;*/
  		float: right;
		margin: 0px 40px 0px 0px;
		padding: 10px;
  	}
  	.nav-item {
		/*border: 1px solid;*/  		
		float: left;
		margin: 0px 10px;
		cursor: pointer;
		font-size: 18px;
  	}
  	#site-title {
  		/*border: 1px solid;*/
  		float: left;
		padding: 0px;
		margin: 0px 0px 0px 60px;
		font-size: 34px;
  	}
  </style>

</head>
<body>

<% flash.each do |key,value| %>
		<p><%= value %></p>
<% end %>

<header>
	<div id="site-title">Library Manager</div>
	<div id="navigation">
		<div class="nav-item">
			<%= link_to "All Books", books_path %>
		</div>
		<% if user_signed_in? %>
			<div class="nav-item">
				<%= link_to current_user.name, user_path(current_user) %>
			</div>
			<% if can? :create, @book %>
				<div class="nav-item">
					<%= link_to "Add a new book", new_book_path %>
				</div>
			<% end %>	
			<div class="nav-item">
				<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
			</div>
		<% else %>
			<div class="nav-item">
				<%= link_to "Sign up", new_user_registration_path %>
			</div>
			<div class="nav-item">
				<%= link_to "Sign in", new_user_session_path %>
			</div>
		<% end %>
	</div>
</header>

<p class = "showBookSearch">
	Search a book
</p>
<div id="book_select" style="display:none;">
	<input style="width:150px;" id="searchBookData" type="text" placeholder="Enter book name"></div>
	<div id="bookSearchResults" style="visibility:hidden"></div>
</div>
<%= yield %>

</body>
</html>
