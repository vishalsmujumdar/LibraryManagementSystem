<% content_for :head do %>
  	<script type="text/javascript">
    	<%= render :partial => "shared/searchuser", :formats=>[:js] %>
  	</script>
<% end %>

<p>
	ISBN -<br />
	<%= @book.isbn %>
</p>
<p>
	Title<br />
	<%= @book.title %>
</p>
<p>
	<%= image_tag @book.cover.url(:medium) %>
</p>
<p>
	Description<br />
	<%= @book.description %>
</p>
<p>
	Category<br />
	<%= @book.category %>
</p>
<p>
	Authors<br />
	<%= @book.authors %>
</p>

<h2>Book Items [<%= @book.number_of_copies %>]</h2>

<% @book.bookitems.each do |item| %>
  <p>
    <strong>Availability:</strong>
    <%= item.availability ? "Available" : "Issued" %>
  </p>
 
  <p>
    <strong>Owner Id:</strong>
    <%= item.user.name %>
  </p>
  <p>
  	<%= link_to "Issue a copy", new_book_bookitem_bookissue_path(@book,item.id) %>
  </p>
<% end %>


<p id = "showSearch">
	Add Book Item
</p>

<div id="user_select" style="display:none;">
	Search User:
	<input style="width:150px;" id="searchData" type="text"></div>
	<div id="searchResults" style="visibility:hidden"></div>
</div>