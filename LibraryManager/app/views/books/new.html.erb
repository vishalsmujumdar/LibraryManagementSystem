<% content_for :head do %>
  	<%= javascript_include_tag "angular.js" %>
  	<%= javascript_include_tag "app.js" %>
  	<%= javascript_include_tag "controllers.js" %>
  	
<% end %>
<h1>new boook</h1>

<%= form_for @book, :html => { :multipart => true } do |f| %>
	<p>
		<%= f.label :isbn, "ISBN - " %><br />
		<%= f.text_field :isbn %>
	</p>
	<p>
		<%= f.label :title, "Title" %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description, "Description" %><br />
		<%= f.text_field :description %>
	</p>
	<p>
		<%= f.label :category, "Category" %><br />
		<%= f.text_field :category %>
	</p>
	<p>
		<%= f.label :authors, "Authors" %><br />
		
		<div ng-app="AuthorSelectorApp" ng-controller="authorsController">
			<ul>
				<li ng-repeat="author in authorsList">
					<p>{{author.name}}</p>
				</li>
			</ul>
		</div>
		
	</p>
	<p>
		<%= f.label :cover, "Cover photo"%><br />
		<%= f.file_field :cover %>
	</p>
	<p>
		<%= f.submit "Add book"%>
	</p>

<% end %>